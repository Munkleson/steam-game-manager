<%= javascript_include_tag 'owned_games_list', 'data-turbo-track': 'reload', defer: true %>
<%= stylesheet_link_tag "cards", "data-turbo-track": "reload" %>

<ul class="list-unstyled d-flex flex-column align-items-center row">
  <% @owned_games.each do |game| %>
    <li class="card col-4 d-flex flex-row mt-2 p-0 justify-content-center align-items-center">
      <%# <div class="card-img-holder d-flex justify-content"> %>
        <img src=<%= game.image_url %> class="card-img-width card-img img-fluid" alt="...">
      <%# </div> %>
      <div class="card-info-dimensions card-body d-flex m-0 p-0 ps-3 flex-column">
        <h6 class="card-info-item card-title m-0 p-0"><%= game.name %></h5>
        <div class="card-info-item d-flex align-items-center">
          <p class="completed-text m-0">Completed?</p>
          <%= check_box_tag :completed, "t", game[:completed], class: "completed-checkbox ms-2", id: game[:id] %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
